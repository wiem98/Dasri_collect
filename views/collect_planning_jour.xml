<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Formulaire du modèle collecte.planning_journalier -->
     <record id="view_collecte_planning_journalier_form" model="ir.ui.view">
        <field name="name">collecte.planning_journalier.form</field>
        <field name="model">collecte.planning_journalier</field>
        <field name="arch" type="xml">
            <form string="Planning Journalier">
                <header>
                    <button name="action_generate_from_monthly"
                            type="object"
                            string="Générer depuis le planning mensuel"
                            class="btn-primary"/>      
                        <button name="action_show_optimized_route"
                    type="object"
                    string="Voir le trajet optimisé"
                    class="btn-secondary"
                    icon="fa-map"/>
                </header>

                <group>
                    <field name="date"/>
                    <field name="total_quantite" readonly="1"/>
                </group>

                <field name="ligne_ids">
                    <list editable="bottom">
                         <field name="vehicle_id" />

                        <field name="partner_id"/>
                        <field name="zone"/>          
                        <field name="drive_distance_km"/>
                        <field name="drive_time_min"/>
                        <field name="service_time_min"/>
                        <field name="cumulative_time_min"/>
                    </list>
                </field>
            </form>
        </field>
    </record>
    <!-- Vue liste -->
    <record id="view_collecte_planning_journalier_tree" model="ir.ui.view">
        <field name="name">collecte.planning_journalier.tree</field>
        <field name="model">collecte.planning_journalier</field>
        <field name="arch" type="xml">
            <list>
                <field name="date"/>
                <field name="vehicle_id"/>
                <field name="total_quantite"/>
            </list>
        </field>
    </record>
    

</odoo>
