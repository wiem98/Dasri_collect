<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="TraccarRealtimeTrackingMap">
        <div class="o_realtime_tracking_map_container" style="height: 100%; width: 100%;">
        <style>
                .pulse-icon {
                    display: block;
                    width: 20px;
                    height: 20px;
                    border-radius: 50%;
                    background: #3388ff;
                    border: 2px solid white;
                    box-shadow: 0 0 0 rgba(51, 136, 255, 0.9);
                    animation: pulse 1.5s infinite;
                }
                
                @keyframes pulse {
                    0% {
                        box-shadow: 0 0 0 0 rgba(51, 136, 255, 0.9);
                    }
                    70% {
                        box-shadow: 0 0 0 10px rgba(51, 136, 255, 0);
                    }
                    100% {
                        box-shadow: 0 0 0 0 rgba(51, 136, 255, 0);
                    }
                }
            </style>
            <div t-ref="map" style="height: 600px; width: 100%;"></div>
        </div>
    </t>
</templates>